@page {
    size: 21cm 29.7cm;
    margin: 1cm;
    margin-header: 0;
    margin-footer: 0;
}

html {
    margin: 0;
    padding: 0;
}

body {
    margin: 0;
    padding: 0;
}

h1 {
    font-size: 20px;
    color: black;
    padding-bottom: .2em;
    margin-bottom: .2em;
}

h2 {
    font-size: 17px;
    color: black;
    padding-bottom: .2em;
    margin-bottom: .2em;
}

h3 {
    font-size: 14px;
    color: black;
    padding-bottom: .2em;
    margin-bottom: .2em;
}

table {
    border-collapse: collapse;
    border: 0 none;
}

.receipt {
    width: 96%;
    min-height: 13cm;
    margin: 1em 2%;
}

.receipt .title {
    width: 100%;
    padding-left: 1em;
    padding-bottom: 1em;
    text-align: left;
}

.receipt .title small {
    color: #252525;
}

.receipt .contact-subjects {
    width: 100%;
    padding-bottom: 1em;
}

.receipt .contact-subjects .contact-subject {
    width: 44%;
    min-height: 6em;
    padding-left: 1%;
    float: left;
    border: 2px solid grey;
    padding-bottom: 1em;
}

.receipt .contact-subjects .left {
    margin-left: 2%;
}

.receipt .contact-subjects .right {
    margin-left: 5%;
}

.receipt .contact-subjects .header-with-logo {
    vertical-align: middle;
    width: 100%;
}

.receipt .contact-subjects .header-with-logo .left {
    width: 39% !important;
    float: left;
    padding: 0 !important;
    padding-left: 0;
    margin-left: 0 !important;
    height: 2em;
}

.receipt .contact-subjects .header-with-logo .right {
    float: left;
    padding: 0;
    padding-left: 0 !important;
    width: 59% !important;
    margin-left: 0 !important;
    padding-top: .2em !important;
    height: 3em;
}

.receipt .contact-subjects .header-with-logo .logo {
    width: 100%;
    height: 3em;
    padding-top: 0;
    max-height: 3em;
    overflow: hidden;
    vertical-align: middle;
}

.receipt .contact-subjects .logo img {
    height: 2em !important;
}

.prices {
    width: 100%;
    padding: 2em .5em;
    min-height: 8em;
}

.prices table {
    width: 100%;
    table-layout: fixed;
}

.prices table td,
.prices table th {
    padding-top: .3em;
    text-align: right;
}

.prices table .text-left {
    text-align: left;
}

.prices-total td {
    padding-top: .7em;
    border-top: 1px solid gray;
}

.text-left {
    text-align: left;
}

.footer {
    width: 100%;
    padding: 2em 0 1em;
    vertical-align: bottom;
}

.footer .footer-item {
    width: 33%;
    height: 4em;
    float: left;
    text-align: left;
    vertical-align: middle;
}

.header-with-logo {
    vertical-align: middle;
}


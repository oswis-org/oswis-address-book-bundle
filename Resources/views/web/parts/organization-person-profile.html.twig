<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" title="{{ contact.nickname|default }}" itemprop="member"
     itemscope itemtype='{{ contact.person ? 'http://schema.org/Person' : 'http://schema.org/Organization' }}'>
    <article class="profile {{ contact.gender|default }}" id="{{ contact.slug|default }}">
        <div class="profile-image-box text-uppercase" itemprop="image"
             style="background-image: url({{ asset(contact.image ? '/images/contacts/'~contact.image : 'assets/images/seznamovak/kytka-512-upscale.png') }})"
             content="{{ asset(contact.image ? '/images/contacts/'~contact.image : 'assets/images/seznamovak/kytka-512-upscale.png') }}">
            <h3 itemprop="name">{{ contact.name }}</h3>
            <meta itemprop="alternateName" content="{{ contact.nickname|default(contact.givenName)|default }}">
            {% if position.active and position.special %}
                <h4 class="text-uppercase">
                    <span itemprop="jobTitle" title="{{ position.name }}">{{ position.shortName }}</span>
                </h4>
            {% endif %}
        </div>
        <div class="first-line" title="{{ position.description|default|markdown_to_html|striptags }}">
            {{ position.description|default|markdown_to_html }}
        </div>
        <div itemprop="description">
            {{ position.note|default|markdown_to_html }}
        </div>
    </article>
</div>
